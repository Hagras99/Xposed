{
    "manifest_version": 3,
    "name": "Xposed",
    "version": "1.0",
    "description": "Detects AI-generated videos and audio content including deepfakes across websites",
    
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "<all_urls>"
    ],
  
    "host_permissions": [
      "<all_urls>"
    ],
  
    "action": {
      "default_popup": "index.html"
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["index.css"],
        "js": ["index.js"]
      }
    ],
  
    "icons": {
      "16": "logo.jpg",
      "48": "logo.jpg",
      "128": "logo.jpg"
    }
  }